<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bluedark">


    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="@dimen/_310sdp"
        android:layout_height="@dimen/_310sdp"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/_minus83sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/rectangle"
        android:rotation="-45">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            card_view:cardBackgroundColor="@android:color/white"
            card_view:cardCornerRadius="@dimen/_20sdp"
            card_view:cardElevation="@dimen/_5sdp"
            card_view:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_50sdp"
                android:layout_marginTop="@dimen/_100sdp"
                android:layout_marginRight="@dimen/_50sdp"
                android:orientation="vertical"
                android:rotation="45">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clone_mcinhefont"
                    android:text="Welcome To"
                    android:textColor="@android:color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/clonemchine"
                    android:text="Survey App"
                    android:textColor="@android:color/black"
                    android:textSize="45sp" />

                <ImageView
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@drawable/apogee" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>


    <Button
        android:id="@+id/btn_letstart"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_160sdp"
        android:background="@drawable/rounbutton"
        android:drawableEnd="@drawable/next"
        android:drawablePadding="@dimen/_5sdp"
        android:elevation="@dimen/_5sdp"
        android:fontFamily="sans-serif"
        android:padding="@dimen/_13sdp"
        android:stateListAnimator="@null"
        android:text="Let's Start"
        android:textAllCaps="true"
        android:textAppearance="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:translationZ="@dimen/_5sdp" />

</RelativeLayout>
